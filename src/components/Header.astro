---
import HeaderLink from "./HeaderLink.astro";
import ThemeIcon from "./ThemeIcon.astro";
import { SITE_TITLE } from "../consts";
import "@fontsource-variable/josefin-sans";
import { Icon } from "astro-icon/components";
---

<header>
  <nav class="flex items-center justify-between p-4 font-display">
    <div class="flex w-1/3 justify-start">
      <a
        href="/"
        class="group flex flex-col items-center justify-center text-rose-700 duration-200 hover:text-rose-600 active:scale-110 active:text-rose-500 active:duration-100"
      >
        <h2 class="text-xl font-bold">
          {SITE_TITLE}
        </h2>
        <p class="text-[0.6rem] uppercase">from Vul</p>
      </a>
    </div>
    <div class="flex w-1/3 justify-center gap-4">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/series">Series</HeaderLink>
      <HeaderLink href="/one-shots">One Shots</HeaderLink>
    </div>
    <div class="flex w-1/3 flex-row justify-end gap-4">
      <a
        href="/search"
        class="text-xl font-bold text-rose-700 duration-200 hover:text-rose-600 active:scale-110 active:text-rose-500 active:duration-100"
      >
        <p class="sr-only">Search</p>
        <Icon name="mdi:search" class="h-6 w-6" />
      </a>
      <ThemeIcon />
    </div>
  </nav>
</header>
