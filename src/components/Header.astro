---
import HeaderLink from './HeaderLink.astro';
import ThemeIcon from './ThemeIcon.astro';
import { SITE_TITLE } from '../consts';
import '@fontsource-variable/josefin-sans';
---

<header>
	<nav class="font-display p-4 flex justify-between items-center">
		<div class="w-1/3 flex justify-start">
			<h2 class=" text-orange-300 font-bold text-xl hover:text-orange-400 duration-200 active:text-orange-500 active:scale-x-110 active:duration-100">
				<a href="/">{SITE_TITLE}</a>
			</h2>
		</div>
		<div class="w-1/3 flex gap-4 justify-center">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="w-1/3 justify-end flex">
			<ThemeIcon />
		</div>
	</nav>
</header>