---
import HeaderLink from './HeaderLink.astro';
import ThemeIcon from './ThemeIcon.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '@fontsource-variable/josefin-sans';
---

<header>
	<nav class="font-display p-4 flex justify-between items-center">
		<div class="w-1/3 flex justify-start">
			<a href="/" class="group flex flex-col justify-center items-center active:scale-x-110 active:duration-100 text-orange-300 hover:text-orange-400 duration-200 active:text-orange-500">
			<h2 class="font-bold text-xl">
				{SITE_TITLE}
			</h2>
			<p class="text-sm">
				from Vul
			</p>
		</a>
		</div>
		<div class="w-1/3 flex gap-4 justify-center">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/one-shots">One Shots</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="w-1/3 justify-end flex">
			<ThemeIcon />
		</div>
	</nav>
</header>