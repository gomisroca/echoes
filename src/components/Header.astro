---
import HeaderLink from './HeaderLink.astro';
import ThemeIcon from './ThemeIcon.astro';
import { SITE_TITLE } from '../consts';
import '@fontsource-variable/josefin-sans';
import { Icon } from 'astro-icon/components';
---

<header>
	<nav class="font-display p-4 flex justify-between items-center">
		<div class="w-1/3 flex justify-start">
			<a href="/" class="group flex flex-col justify-center items-center active:scale-110 active:duration-100 hover:text-rose-600 duration-200 active:text-rose-500 text-rose-700">
			<h2 class="font-bold text-xl">
				{SITE_TITLE}
			</h2>
			<p class="text-sm">
				from Vul
			</p>
		</a>
		</div>
		<div class="w-1/3 flex gap-4 justify-center">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/series">Series</HeaderLink>
			<HeaderLink href="/one-shots">One Shots</HeaderLink>
		</div>
		<div class="w-1/3 justify-end flex flex-row gap-4">
			<a href="/search" class="font-bold text-xl duration-200 hover:text-rose-600 active:text-rose-500 text-rose-700 active:scale-110 active:duration-100">
				<p class="sr-only">Search</p>
				<Icon name="mdi:search" class="w-6 h-6" />
			</a>
			<ThemeIcon />
		</div>
	</nav>
</header>