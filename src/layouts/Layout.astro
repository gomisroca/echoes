---
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import "@fontsource-variable/bitter";
import ThemeIcon from "@/components/ThemeIcon.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="flex min-h-screen flex-col bg-zinc-100 text-zinc-800 dark:bg-zinc-900 dark:text-zinc-200"
  >
    <Header />
    <main
      class="container mx-auto flex flex-1 flex-col items-center justify-start p-4 font-body lg:p-8"
    >
      <slot />
    </main>
    <footer class="flex items-center justify-end gap-2 p-4">
      <p
        class="pointer-events-none text-center text-sm text-zinc-400 opacity-75 dark:text-zinc-600"
      >
        &copy; {new Date().getFullYear()} Echoes
      </p>
      <ThemeIcon />
    </footer>
  </body>
</html>
